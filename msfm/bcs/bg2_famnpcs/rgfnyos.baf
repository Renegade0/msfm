IF
	!InParty("Yoshimo")
	Global("rgfnoneforyoshi","GLOBAL",1)
THEN
	RESPONSE #100
		RemoveFamiliar()
		DestroySelf()
		SetGlobal("rgfnoneforyoshi","GLOBAL",0)
END

IF
	Die()
	Global("rgfnoneforyoshi","GLOBAL",1)
THEN
	RESPONSE #100
		SetGlobal("rgfnoneforyoshi","GLOBAL",0)
END

IF
	XPGT("Yoshimo",499999)
	Class(Myself,SORCERER)
	Global("rgfwupg","LOCALS",0)
THEN
	RESPONSE #100
		DisplayStringHead(Myself,@487)
		AddSpecialAbility("RGFAW05")
		ApplySpellRES("RGFAHP1",Myself)
		SetGlobal("rgfwupg","LOCALS",1)
END

